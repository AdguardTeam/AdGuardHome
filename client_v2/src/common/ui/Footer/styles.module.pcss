.footer {
    padding: 32px 16px;
    border-top: 1px solid var(--default-item-divider);

    @media (min-width: 1024px) {
        padding: 16px 32px;
    }
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 24px;
    width: 100%;

    @media (min-width: 1024px) {
        flex-direction: row;
        gap: 40px;
    }
}

.links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;

    @media (min-width: 1024px) {
        flex-wrap: nowrap;
        gap: 40px;
        margin-right: auto;
    }
}

.dropdown {
    display: flex;
    align-items: center;
    gap: 8px;
}

.dropdownTrigger {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
}

.icon {
    color: var(--default-gray-icons);
}

.langOverlay {
    max-width: 100%;
}
